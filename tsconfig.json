{
  "compilerOptions": {
    "jsx": "react",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "lib": ["ESNext"],
  },
  "typeAcquisition": { "enable": true },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs/jsdoc",
    "exclude": ["**/*.test.*", "node_modules/**/*", "src/fixtures/**/*"],
    "excludeExternals": true,
    "ignoreCompilerErrors": true
  }
}
